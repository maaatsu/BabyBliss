<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>新規アカウントの作成</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"ニックネーム"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"メールアドレス"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"パスワード"%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"パスワード再入力"%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"年齢" %>
          </div>
          <div class='field-input'>
            <%= f.number_field :age %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"性別" %>
          </div>
          <div class='field-input'>
            <%= f.select :gender, ["女性", "男性", "その他"] %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"出産予定地" %>
          </div>
          <div class='field-input'>
            <%= f.text_field :prefecture %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"出産予定日" %>
          </div>
          <div class='field-input'>
            <%= f.date_field :due_date %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
